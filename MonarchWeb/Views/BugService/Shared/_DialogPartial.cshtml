<!-- Modal HTML -->
<div id="comfModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="btn-close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="comf-primary"></p>
                <p class="text-secondary"><small id="comf-secondary"></small></p>
            </div>
            <div class="modal-footer">
                <button id="comfCancel" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="comfSubmit" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>