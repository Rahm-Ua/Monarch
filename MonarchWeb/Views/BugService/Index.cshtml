            <th>
                @Html.DisplayNameFor(model => model.ResolutionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResolutionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
